{
    "network": {
        "device": "gpu",
        "input_shape": [3, 64, 64],
        "mode": "training",

        "inference_params": {
            "no_inferences": 5000
        },

        "training_params": {
            "optimizer": "adam",
            "learning_rate": 0.001,
            "loss_function": "categorical_crossentropy",
            "batch_size": 64,
            "epochs": 10,
            "num_samples": 6400
        },

        "warmup_params": {
            "no_operations": 1000
        },

        "task": "classification",
        "layers": [
            {
                "type": "conv2d",
                "activation_function": "relu",
                "io_shape": [3, 64],
                "conv_params": {
                    "kernel_size": [3, 3],
                    "stride": [1, 1],
                    "padding": 1
                }
            },
            {
                "type": "batchnorm2d",
                "batchnorm_params": {
                    "num_features": [64]
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 64,
                    "out_channels": 64,
                    "stride": 1
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 64,
                    "out_channels": 64,
                    "stride": 1
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 64,
                    "out_channels": 128,
                    "stride": 2
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 128,
                    "out_channels": 128,
                    "stride": 1
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 128,
                    "out_channels": 256,
                    "stride": 2
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 256,
                    "out_channels": 256,
                    "stride": 1
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 256,
                    "out_channels": 512,
                    "stride": 2
                }
            },
            {
                "type": "residual_block",
                "residual_params": {
                    "in_channels": 512,
                    "out_channels": 512,
                    "stride": 1
                }
            },
            {
                "type": "maxpool2d",
                "maxpool_params": {
                    "kernel_size": [4, 4],
                    "stride": [1, 1],
                    "padding": 0
                }
            },
            {
                "type": "flatten"
            },
            {
                "type": "dense",
                "io_shape": [12800, 1000]
            }
        ]
    }
}
